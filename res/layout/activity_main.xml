<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp" >

            <Button
                android:id="@+id/get_root_permisson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取root权限" />

            <Button
                android:id="@+id/try_reboot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试root权限（reboot）" />

            <Button
                android:id="@+id/try_call_10086"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拨打电话" />

            <Button
                android:id="@+id/try_mms_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送短信" />

            <Button
                android:id="@+id/try_send_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送邮件" />

            <Button
                android:id="@+id/try_switch_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据开关" />

            <Button
                android:id="@+id/try_switch_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wifi开关" />

            <Button
                android:id="@+id/try_get_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="定位功能" />
            <!-- line -->

            <Button
                android:id="@+id/try_recoder_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通话录音" />
			<Button
                android:id="@+id/try_recoder_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地录音" />
			<Button
                android:id="@+id/try_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照摄像" />
			<Button
                android:id="@+id/try_access_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="访问电话本" />
			<Button
                android:id="@+id/try_access_calllist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="访问通话记录" />
			<Button
                android:id="@+id/try_access_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="访问短信" />
			<Button
                android:id="@+id/try_access_mms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="访问彩信" />
			<!-- line -->
			<Button
                android:id="@+id/try_switch_buletooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="蓝牙开关" />
			<Button
                android:id="@+id/try_switch_nfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NFC开关" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>